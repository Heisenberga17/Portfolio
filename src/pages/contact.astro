---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/astro/Section.astro';
import ContactForm from '@components/react/ContactForm';
import { socials } from '@data/socials';
---

<BaseLayout
  title="Contact | Heisen's Den"
  description="Get in touch â€” whether it's a project idea, collaboration, or just to say hello."
>
  <Section>
    <div class="max-w-3xl mx-auto">
      <div class="mb-14 text-center">
        <p class="text-accent-primary font-mono text-sm tracking-widest uppercase mb-3">Contact</p>
        <h1 class="text-4xl md:text-5xl font-display font-bold leading-tight">
          Get In <span class="text-accent-secondary">Touch</span>
        </h1>
        <p class="text-text-secondary mt-4 text-lg leading-relaxed max-w-lg mx-auto">
          Have a project in mind, want to collaborate, or just want to say hello?
          Drop me a message and I'll get back to you.
        </p>
      </div>

      <ContactForm client:visible />
    </div>
  </Section>

  <!-- Social links -->
  <Section background="secondary">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl font-heading font-bold mb-3">
        Or find me <span class="text-accent-secondary">elsewhere</span>
      </h2>
      <p class="text-text-secondary mb-10 text-sm">
        I'm most active on these platforms.
      </p>

      <div class="flex flex-wrap justify-center gap-4">
        {socials.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-3 rounded-xl border border-border bg-bg-card px-6 py-4 transition-all hover:border-accent-primary/50 hover:shadow-[0_0_24px_rgba(45,87,65,0.1)]"
          >
            <span class="text-text-secondary transition-colors group-hover:text-accent-primary">
              <Fragment set:html={social.icon} />
            </span>
            <span class="text-sm font-medium">{social.label}</span>
          </a>
        ))}
      </div>
    </div>
  </Section>
</BaseLayout>
