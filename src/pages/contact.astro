---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/astro/Section.astro';
import ContactForm from '@components/react/ContactForm';
import { socials } from '@data/socials';
---

<BaseLayout
  title="Contact | Heisen's Den"
  description="Get in touch â€” projects, collaborations, or just to say what's up."
>
  <Section>
    <div class="max-w-3xl mx-auto">
      <div class="mb-14 text-center">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
          Let's talk
        </h1>
        <p class="text-text-secondary mt-4 text-lg leading-relaxed max-w-lg mx-auto">
          Got an idea, a project, or just want to say what's up? I'm all ears.
        </p>
      </div>

      <ContactForm client:visible />
    </div>
  </Section>

  <!-- Social links -->
  <Section background="secondary">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl font-bold mb-8">
        Find me elsewhere
      </h2>

      <div class="flex flex-wrap justify-center gap-4">
        {socials.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-3 rounded-xl border border-border bg-bg-card px-6 py-4 transition-all hover:border-accent-primary/50 hover:shadow-[0_0_24px_rgba(45,87,65,0.1)]"
          >
            <span class="text-text-secondary transition-colors group-hover:text-accent-primary">
              <Fragment set:html={social.icon} />
            </span>
            <span class="text-sm font-medium">{social.label}</span>
          </a>
        ))}
      </div>
    </div>
  </Section>
</BaseLayout>
