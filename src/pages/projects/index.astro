---
import BaseLayout from '@layouts/BaseLayout.astro';
import Section from '@components/astro/Section.astro';
import ProjectFilter from '@components/react/ProjectFilter';
import { projects } from '@data/projects';

const serializedProjects = projects.map((p) => ({
  slug: p.slug,
  title: p.title,
  description: p.description,
  image: p.image,
  tags: p.tech,
  category: p.category,
  color: p.color,
  url: p.url,
}));
---

<BaseLayout
  title="Projects | Heisen's Den"
  description="Things I've built â€” platforms, businesses, and creative projects."
>
  <Section>
    <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-14">Projects</h1>

    <ProjectFilter projects={serializedProjects} client:load />
  </Section>
</BaseLayout>
